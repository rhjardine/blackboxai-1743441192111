# Server Configuration
PORT=8000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/healthplatform
MONGO_TEST_URI=mongodb://localhost:27017/healthplatform_test

# Security Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRE=30d
COOKIE_EXPIRE=30

# Encryption Configuration
AES_KEY=32_byte_secure_key_for_aes_256
IV_LENGTH=16

# Rate Limiting
API_RATE_LIMIT=100
API_WINDOW_MS=15m

# Email Configuration (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password
SMTP_FROM=Health Platform <noreply@healthplatform.com>